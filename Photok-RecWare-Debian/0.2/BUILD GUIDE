# The following has been tested on Debian, some libraries may need to change to compile
# run the following commands while in the main directory to build the program from source

sudo apt install python3
sudo apt install python3-venv
python3 -m venv venv
source venv/bin/activate
pip install -r requirements.txt
pip install -U pyinstaller
pyinstaller --add-data "icons:icons" --add-data "filepicker/icons:filepicker/icons" --name "RecWare-Photok" gui.py  # (linux, binary+directory)
pyinstaller --onefile --add-data "icons:icons" --add-data "filepicker/icons:filepicker/icons" --name "RecWare-Photok"  gui.py  # (linux, binary+single executable)